@model Mission08_Team0413.Models.TaskEntry


@{
    ViewData["Title"] = "CreateTask";
}



<h1>Add Task</h1>

<form method="post" >

    <input type ="hidden" asp-for="TaskId" />



    <label asp-for="EnteredTask">Task Description</label>
<input asp-for="EnteredTask" class="form-control" required/>

<br /><br />

    <label asp-for="DueDate">Due Date</label>
<input asp-for="DueDate" type="date" class="form-control" />

<br /><br />
    
    <label asp-for="Quadrant">Quadrant</label>
<input asp-for="Quadrant" class="form-control" required />

<br /><br />


    

    <!--Use this if you want to hard code it-->
     <label asp-for="CategoryId">Category</label>
    <select>
        <option value="">Select a Category</option>
        @foreach(var category in ViewBag.Categories)
        {
            <option value="@category.CategoryId">@category.CategoryName</option>
        })
    </select>
            

<br /><br />

    <label asp-for="Completed">Completed</label>
        <select asp-for="Completed" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>

<br /><br />
    <button type="submit" class="btn btn-primary">Submit</button>

</form>